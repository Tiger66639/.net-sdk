@using DreamFactory.AddressBook.Models.Contacts
@model IEnumerable<DreamFactory.AddressBook.Models.Contacts.Contact>

@{
    ViewBag.Title = "Contacts";
}

<h2>@ViewBag.Title</h2>


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <td width="20%">@Html.Label("Id")</td>
            <td width="50%">@Html.Label("Name")</td>
            <td width="30%">@Html.Label("Action")</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Contact group in Model)
        {
            <tr>
                <td>@group.Id</td>
                <td>@group.FirstName</td>
                <td>
                    <a type="button" class="btn btn-default btn-sm" aria-label="Contacts" href="@Url.Action("Details", new { GroupId = group.Id })">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Details
                    </a>
                    <a type="button" class="btn btn-default btn-sm" aria-label="Edit" href="@Url.Action("Edit", new { Id = group.Id })">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("Paging", "ContactGroup")
